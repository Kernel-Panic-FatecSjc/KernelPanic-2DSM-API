    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeDashboard();
        });

        function initializeDashboard() {
            const dados = getDadosFicticios();
            
            createPerformanceChart(dados.performance);
            createRevenueChart(dados.faturamento);
            createCityChart(dados.cidades);
            createSegmentChart(dados.segmentos);
        }

        function createPerformanceChart(dados) {
            const ctxPerformance = document.getElementById('graficoPerformance').getContext('2d');
            const chartPerformance = new Chart(ctxPerformance, {
                type: 'line',
                data: {
                    labels: dados.meses,
                    datasets: [
                        {
                            label: 'Visitas',
                            data: dados.visitas,
                            borderColor: '#3B82F6',
                            backgroundColor: 'transparent',
                            borderWidth: 3,
                            pointBackgroundColor: '#3B82F6',
                            pointBorderColor: '#ffffff',
                            pointBorderWidth: 2,
                            pointRadius: 6
                        },
                        {
                            label: 'Vendas',
                            data: dados.vendas,
                            borderColor: '#1E40AF',
                            backgroundColor: 'transparent',
                            borderWidth: 3,
                            pointBackgroundColor: '#1E40AF',
                            pointBorderColor: '#ffffff',
                            pointBorderWidth: 2,
                            pointRadius: 6
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#e5e7eb'
                            }
                        },
                        x: {
                            grid: {
                                color: '#e5e7eb'
                            }
                        }
                    }
                }
            });
        }

        function createRevenueChart(dados) {
            const ctxFaturamento = document.getElementById('graficoFaturamento').getContext('2d');
            const chartFaturamento = new Chart(ctxFaturamento, {
                type: 'bar',
                data: {
                    labels: dados.meses,
                    datasets: [{
                        label: 'Faturamento (R$)',
                        data: dados.valores,
                        backgroundColor: '#3B82F6',
                        borderColor: '#2563EB',
                        borderWidth: 1,
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#e5e7eb'
                            },
                            ticks: {
                                callback: function(valor) {
                                    return 'R$ ' + valor.toLocaleString('pt-BR');
                                }
                            }
                        },
                        x: {
                            grid: {
                                color: '#e5e7eb'
                            }
                        }
                    }
                }
            });
        }

        function createCityChart(dados) {
            const ctxCidades = document.getElementById('graficoCidades').getContext('2d');
            const chartCidades = new Chart(ctxCidades, {
                type: 'doughnut',
                data: {
                    labels: dados.nomes,
                    datasets: [{
                        data: dados.valores,
                        backgroundColor: ['#3B82F6', '#1E40AF', '#60A5FA', '#93C5FD'],
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });
        }

        function createSegmentChart(dados) {
            const ctxSegmentos = document.getElementById('graficoSegmentos').getContext('2d');
            const chartSegmentos = new Chart(ctxSegmentos, {
                type: 'doughnut',
                data: {
                    labels: dados.nomes,
                    datasets: [{
                        data: dados.valores,
                        backgroundColor: ['#2563EB', '#1D4ED8', '#3730A3'],
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });
        }

        //dados teste
        function getDadosFicticios() {
            return {
                performance: {
                    meses: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
                    visitas: [45, 52, 48, 38, 55, 42],
                    vendas: [23, 28, 25, 19, 31, 22]
                },
                faturamento: {
                    meses: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
                    valores: [4600, 5200, 4800, 3800, 5500, 4200]
                },
                cidades: {
                    nomes: ['São Paulo', 'Rio de Janeiro', 'Belo Horizonte', 'Outras'],
                    valores: [45, 30, 15, 10]
                },
                segmentos: {
                    nomes: ['Varejo', 'Atacado', 'Online'],
                    valores: [40, 35, 25]
                }
            };
        }
    </script>
